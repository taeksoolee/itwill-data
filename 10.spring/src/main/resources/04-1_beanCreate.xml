<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- bean : Spring Container에게 Spring Bean 관련 정보를 제공하기 위한 엘리먼트 -->
	<!-- => Spring Bean : Spring Container에 의해 관리되는 인스턴스 -->
	<!-- class 속성 : Spring Bean으로 사용하기 위한 클래스명을 속성값으로 설정 - 필수 -->
	<!-- => class 속성값은 자동 완성기능을 이용하여 작성하는 것을 권장 -->
	<!-- id 속성 : Spring Bean 사용을 위한 고유값(beanId 또는 beanName)을 속성값으로 설정 -->
	<!-- => id 속성 대신 name 속성 사용 가능 -->
	<!-- => id 속성값은 클래스명을 이용하여 설정하는 것을 권장 - class 속성이 설정되어 있는 경우 자동완성 기능 제공 -->
	<bean class="site.itwill04.bean.CreateBean" id="createBean"/>

	<!-- import : 다른 Bean Configuration File의 Spring Bean 정보를 포함하는 엘리먼트 -->
	<!-- resource 속성 : Bean Configuration File의 경로를 속성값으로 설정 -->
	<import resource="03_message.xml"/>
</beans>











